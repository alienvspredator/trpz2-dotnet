<Page x:Class="WpfApp4.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Width="800">
        <Grid Name="LoginForm" HorizontalAlignment="Center" VerticalAlignment="Center" Width="254" Height="134">
            <StackPanel>
                <Label Content="Логин:" VerticalAlignment="Center"/>
                <TextBox Name="UsernameBox" VerticalContentAlignment="Bottom"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Center">
                <Label Content="Пароль:"/>
                <PasswordBox x:Name="PasswordBox" PasswordChar="*"/>
            </StackPanel>
            <Grid VerticalAlignment="Bottom" Margin="0,0,0,2">
                <Button x:Name="SubmitButton" Content="Войти" IsDefault="True" Click="SubmitButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Margin="42,0,0,0"/>
                <Button x:Name="RegisterButton" Content="Регистрация" Click="RegisterButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,42,0"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
